<style>
	.about {
		display: flex;
		flex-direction: column;
		gap: 3.5rem;
	}
	

	img {
		width: 80vw;
		margin-top: 1.5rem;
		border-radius: 1.5rem;
		/* box-shadow: var(--shadow-md); */
		box-shadow: 3px 3px grey, -0.1em 0 .8em rgb(166, 30, 219);
	}

	section {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
		color: var(--gray-200);
	}

	.section-title {
		grid-column-start: 1;
		font-size: var(--text-2xl);
		color: var(--gray-0);
	}

	.content {
		grid-column: 2 / 4;
	}

	
	.content a {
		place-content:initial;
		text-align:left;
		padding: 0.25em 0.5em;
		gap: 0.8em;
		font-weight: bold;
		/* color: var(--accent-text-over); */
		text-decoration:underline;
		line-height: 1.1;
		/* border-radius: 999rem; */
		/* overflow: hidden; */
	/*	background: var(--gradient-accent-orange); */
		/* box-shadow: var(--shadow-md); */
		white-space: nowrap;
	
	}
	.content :global(a) {
		text-decoration: 1px solid underline transparent;
		text-underline-offset: 0.25em;
		transition: text-decoration-color var(--theme-transition);
	}

	.content :global(a:hover),
	.content :global(a:focus) {
		text-decoration-color: currentColor;
	}

	.content1 {
		display:inline-flexbox;
	
		grid-column: 2 / 4;

	}
	.content1 h2{
		font-size:larger;
		font-weight: 800;
	}

	.content1 .skillset{
	
		place-content:initial;
		text-align:left;
		padding: 1em 1em;
		margin: 0em 1em;
		gap: 0.8em;
		/* color: var(--accent-text-over); */
		text-decoration:solid;
		line-height: 1.1;
		border-radius: 2rem;
		border: 1mm ridge rgba(163, 123, 187, 0.993);		
		overflow: hidden;
		/* background: var(--gradient-accent-orange); */
		background:rgb(255, 255, 255);
		box-shadow: var(--shadow-md);
		white-space: nowrap;
	}
	@media (prefers-color-scheme: dark){
		.content1 h2 {
			color: black;
		}
		.skillset {
			color: black;
		}
	}
	@media (min-width: 50em) {
		.about {
			display: grid;
			grid-template-columns: 1fr 60% 1fr;
		}

		.about > :global(:first-child) {
			grid-column-start: 2;
		}

		.aboutimg{
		display: flex;
		align-items: center;
	    }

		img{
			width: 40vw;
			margin-top: 1.5rem;
		border-radius: 1.5rem;
		/* box-shadow: var(--shadow-md); */
		box-shadow: 3px 3px grey, -0.1em 0 .8em rgb(166, 30, 219);
			}

		section {
			display: contents;
			font-size: var(--text-lg);
			font-style:italic;
		}
		.section-title{
			font-weight: 900;
		}
		.content1{
			display:flex;
		}
	}
</style>
